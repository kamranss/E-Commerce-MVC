@model ConfirmAccountVM
@{
    ViewData["Title"] = "VertifyEmail";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>

    <link rel="stylesheet" href="~/templates/Otppage/StyleSheet.css">
</head>
<body>
    <div>
        <div>
            <div class="container height-100 d-flex justify-content-center align-items-center">
                <div class="position-relative">
                    <div class="card p-2 text-center">
                        <h6>Please enter the one time password <br> to verify your account</h6>
                        <div>
                            <span>A code has been sent to</span>
                            <small>@Model.Email</small>
                        </div>
                        <div id="otp" class="inputs d-flex flex-row justify-content-center mt-2">

                            <form asp-controller="Account" asp-action="ConfirmEmail" method="post" enctype="multipart/form-data">
                                <h2>Please Write OTP</h2>
                                <input asp-for="OTP" placeholder="OTP" class="m-2 text-center form-control rounded" type="number" maxlength="6" />
                                <span style="display: block" class="text-danger">@TempData["Error"]</span>
                                <input class="m-2 text-center form-control rounded" type="hidden" asp-for="Email" />
                                <input type="submit" value="confirm" />
                            </form>
                        </div>
                    </div>
                    <div class="card-2">
                        <form asp-controller="Account" asp-action="ResendOTP" asp-route-email="@Model.Email">
                            <div class="content d-flex justify-content-center align-items-center">
                                <span>Didn't get the code</span>
                                <a href="#" class="text-decoration-none ms-3">Resend(1/3)</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/templates/Otppage/JavaScript.js"></script>
</html>



