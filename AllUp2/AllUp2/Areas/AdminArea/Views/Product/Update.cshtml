@model ProductUpdateVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Product</h4>
                <p class="card-description">
                    Update product details and manage images
                </p>
                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count">Count</label>
                        <input asp-for="Count" class="form-control" placeholder="Count">
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.Categories" aria-label="Default select example">
                            <option selected>Select Category</option>
                        </select>
                    </div>
                    <div class="form-group">
                        @foreach (var image in Model.ExistingImages)
                        {
                            <img class="me-2" width="200" src="~/img/@image.ImageUrl" />
                            <a class="btn btn-danger" asp-controller="Product" asp-action="RemoveImage" asp-route-id="@image.Id">Delete</a>
                        }
                    </div>

                    <div class="form-group">
                        <input type="file" name="NewImages" class="form-control" multiple>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-controller="Product" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial"></partial>
}
