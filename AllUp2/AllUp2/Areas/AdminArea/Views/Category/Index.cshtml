@model List<Category>
@{
    //ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="pcoded-main-container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>
                    <a class="btn btn-success" asp-controller="Category" asp-action="Create">Add category</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description.Substring(0,20)</td>
                                        <td>
                                            <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id"> <i class="mdi mdi-table-edit"></i></a>
                                            <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"> <i class="mdi mdi-delete"></i></a>
                                            <a class="btn btn-success" asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id"> <i class="mdi mdi-details"></i></a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
